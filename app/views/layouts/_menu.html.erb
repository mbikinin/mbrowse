<nav id="platform-menu" class="platform-menu">
	<%= link_to "Home", root_path, :class=>"home" %>
			<ul>
	<% Menu.in_main.each do |t| %>

			<li><%= link_to t.title, t.uri.nil? ? (Menu.find_by_parent_id(t.id).uri.nil? ? Menu.find_by_parent_id(t.id).uri : "#") : t.uri %>
				<% Menu.find_all_by_parent_id(t.id).each do |child| %>
                <ul class="sub-menu">
					<li><%= link_to child.title, (child.uri.nil? || child.uri.empty? ? category_path(child.id) : child.uri )  %></li>
                </ul>
	        <% end %>
			</li>	        
		
    <% end %>		
    </ul>	
</nav>